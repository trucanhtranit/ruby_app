.table-responsive
  %table.table.table-striped.table-hover#dataTable{width: "100%", cellspacing: "0"}
    %thead.table-dark
      %tr
        %th ID
        %th Name
        %th Description
        %th Category
        %th Actions
    %tbody
      - @comics.each do |comic|
        %tr
          %td= comic.id
          %td= comic.title
          %td= comic.description
          %td= comic.category.name
          %td.d-flex.gap-2
            = link_to edit_admin_comic_path(comic) do
              %i.fas.fa-edit
            = link_to admin_comic_path(comic), method: :delete, data: { confirm: 'Bạn có chắc chắn không?' } do
              %i.fas.fa-trash.text-danger
